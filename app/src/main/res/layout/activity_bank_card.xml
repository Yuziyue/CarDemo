<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <com.example.demo.TitleBackLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/showCard"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#87CEFA"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/bank_pic"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:src="@mipmap/bank_jianhang"
            app:riv_border_color="#00000000"
            app:riv_corner_radius="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/bankname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国建设银行"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/bankfrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="储蓄卡"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="   ****         ****         ****        "
                    android:textColor="@color/white"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/last_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="3266"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快捷支付"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bankcard_btn"
                    android:text="卡号详情"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_marginTop="10dp"
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_02_bankcard">

        </androidx.recyclerview.widget.RecyclerView>
        <!--这里是你自己要加的内容，只要内容大于一屏，就会滚动-->
    </ScrollView>

    <Button
        android:id="@+id/Bind_Btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_button_div"
        android:text="绑定银行卡"
        android:textColor="@drawable/button_font_style" />
</LinearLayout>

