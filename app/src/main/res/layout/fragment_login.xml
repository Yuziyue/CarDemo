<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    <EditText
        android:id="@+id/accountEt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_edit_login"
        android:ems="10"
        android:hint="请输入您的用户名/邮箱"
        android:singleLine="true">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pwdEt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/background_edit_login"
        android:ems="10"
        android:hint="请输入您的密码"
        android:password="true"
        android:singleLine="true" />

        <Button
            android:id="@+id/Login_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_button_div"
            android:text="登录"
            android:textColor="@drawable/button_font_style" />
    </LinearLayout>

</RelativeLayout>
