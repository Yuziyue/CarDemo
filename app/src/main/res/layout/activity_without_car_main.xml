<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <com.example.demo.TitleBackLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="334dp"
        android:layout_height="94dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/bg_nocar_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/bind_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/circle_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:text="添加车辆服务"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="体验无感支付"
                android:textColor="@color/white"></TextView>
        </LinearLayout>


    </LinearLayout>



    <FrameLayout
        android:layout_marginTop="20dp"
        android:id="@+id/ad_frame_layout"
        android:layout_width="389dp"
        android:layout_height="135dp"></FrameLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button_user"
            android:drawableLeft="@mipmap/battery_"
            android:drawableRight="@mipmap/back_1"
            android:drawablePadding="1sp"
            android:paddingStart="20dp"
            android:paddingRight="40dp"
            android:text="充电"
            android:textColor="@drawable/button_font_style_user" />

        <Button
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button_user"
            android:drawableLeft="@mipmap/order_"
            android:drawableRight="@mipmap/back_1"
            android:drawablePadding="1sp"
            android:paddingStart="20dp"
            android:paddingRight="40dp"
            android:text="我的订单"
            android:textColor="@drawable/button_font_style_user" />

    </LinearLayout>





</LinearLayout>

